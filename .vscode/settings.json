{
  "rust-analyzer.linkedProjects": [
    "./basics/control_structures/Cargo.toml"
  ],
  
  // Automatische Formatierung
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  
  // Rust-spezifische Einstellungen
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.trimAutoWhitespace": true
  },
  
  // Rust-Analyzer Konfiguration
  "rust-analyzer.checkOnSave.command": "cargo check",
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.completion.addCallParentheses": true,
  "rust-analyzer.completion.addCallArgumentSnippets": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.implementations.enable": true,
  "rust-analyzer.lens.references.enable": true,
  "rust-analyzer.hover.actions.enable": true,
  
  // Rustfmt Optionen
  "rust-analyzer.rustfmt.extraArgs": [],
  "rust-analyzer.rustfmt.overrideCommand": null
}